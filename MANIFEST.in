# Include documentation
include README.md
include DEMO_README.md
include CHANGELOG.md
include LICENSE

# Include configuration files
include pyproject.toml
include compose.yml

# Include src packages
recursive-include src/bait_chat *.py
recursive-include src/bait_mcp *.py
recursive-include src/demo_instrument *.py *.yml *.yaml *.sh *.md
recursive-include src/vector_db *

# Include legacy bait_chat (will be removed later)
recursive-include bait_chat *.py

# Include tests
recursive-include tests *.py

# Include scripts
recursive-include scripts *.sh
recursive-include scripts *.md

# Include Docker files
recursive-include docker *

# Exclude development files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store